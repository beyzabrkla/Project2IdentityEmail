@{
    ViewData["Title"] = "Yeni Mesaj";
    Layout = "~/Views/Shared/_MailLayout.cshtml";
}
<div class="page-wrapper">
    <div class="page-breadcrumb bg-white p-3 shadow-sm">
        <div class="row align-items-center">
            <div class="col-12">
                <div class="d-flex align-items-center">
                    <a href="/Dashboard/Index" class="mr-3 d-flex align-items-center justify-content-center"
                       style="width: 40px; height: 40px; background-color: #f3f3f5; border-radius: 50%; transition: 0.3s;"
                       onmouseover="this.style.backgroundColor='#e9ecef'"
                       onmouseout="this.style.backgroundColor='#f3f3f5'">
                        <i class="mdi mdi-chevron-left text-primary" style="font-size: 24px;"></i>
                    </a>

                    <div class="d-flex flex-column">
                        <h4 class="page-title mb-0 font-weight-bold" style="color: #3e3c59;">Yeni Mesaj Oluştur</h4>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0 bg-transparent" style="font-size: 12px;">
                                <li class="breadcrumb-item"><a href="/Dashboard/Index" class="text-muted">Ana Sayfa</a></li>
                                <li class="breadcrumb-item active text-dark" aria-current="page">Mesaj Oluştur</li>
                            </ol>
                        </nav>
                    </div>

                    <div class="ml-auto d-flex align-items-center">
                        <a href="javascript:location.reload();" class="text-muted mx-2" title="Yenile">
                            <i class="mdi mdi-refresh font-20"></i>
                        </a>
                        <a href="javascript:void(0)" class="text-muted mx-2" title="Ayarlar">
                            <i class="mdi mdi-settings font-20"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
        @await Component.InvokeAsync("MailLayoutSidebar")

        <div class="flex-grow-1 bg-white p-4">
            <div class="border-bottom pb-3 mb-4">
                <h4 class="font-weight-bold" style="color: #3e3c59;">Yeni</h4>
                <span class="text-muted">Yeni bir e-posta oluşturun.</span>
            </div>

            <form>
                <div class="form-group mb-4">
                    <input type="email" class="form-control rounded-pill border-light bg-light px-4"
                           placeholder="Kime:" style="height: 45px;">
                </div>

                <div class="form-group mb-4">
                    <input type="text" class="form-control rounded-pill border-light bg-light px-4"
                           placeholder="Konu:" style="height: 45px;">
                </div>

                <div class="form-group mb-4">
                    <textarea id="editor1" name="editor1"></textarea>
                </div>

                <div class="mb-4">
                    <h6 class="font-weight-bold text-muted mb-2">Attachments</h6>
                    <div class="p-4 border-dashed rounded text-center" style="border: 2px dashed #e9ecef; background: #fafafa;">
                        <input type="file" class="form-control-file d-none" id="attachment">
                        <label for="attachment" class="mb-0 cursor-pointer">
                            <i class="mdi mdi-cloud-upload font-24 text-muted"></i>
                            <p class="mb-0">Dosya eklemek için tıklayın.</p>
                        </label>
                    </div>
                </div>

                <div class="d-flex justify-content-end border-top pt-4">
                <a class="btn waves-effect waves-light btn-rounded btn-outline-secondary">Vazgeç</a>
                    <a class="btn waves-effect waves-light btn-rounded btn-primary" href="Mail/SendMail">Gönder</a>
                </div>
            </form>
        </div>
    </div>
</div>

