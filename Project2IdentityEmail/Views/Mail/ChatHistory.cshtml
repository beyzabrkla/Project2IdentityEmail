
@{
    ViewData["Title"] = "ChatHistory";
    Layout = "~/Views/Shared/_MailLayout.cshtml";
}


<div class="page-wrapper">
    <div class="page-breadcrumb bg-white p-3 shadow-sm">
        <div class="row align-items-center">
            <div class="col-12">
                <div class="d-flex align-items-center">
                    <a href="/Dashboard/Index" class="mr-3 d-flex align-items-center justify-content-center"
                       style="width: 40px; height: 40px; background-color: #f3f3f5; border-radius: 50%; transition: 0.3s;"
                       onmouseover="this.style.backgroundColor='#e9ecef'"
                       onmouseout="this.style.backgroundColor='#f3f3f5'">
                        <i class="mdi mdi-chevron-left text-primary" style="font-size: 24px;"></i>
                    </a>

                    <div class="d-flex flex-column">
                        <h4 class="page-title mb-0 font-weight-bold" style="color: #3e3c59;">Konuşma Geçmişi</h4>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0 bg-transparent" style="font-size: 12px;">
                                <li class="breadcrumb-item"><a href="/Dashboard/Index" class="text-muted">Ana Sayfa</a></li>
                                <li class="breadcrumb-item active text-dark" aria-current="page">Konuşma Geçmişi</li>
                            </ol>
                        </nav>
                    </div>

                    <div class="ml-auto d-flex align-items-center">
                        <a href="javascript:location.reload();" class="text-muted mx-2" title="Yenile">
                            <i class="mdi mdi-refresh font-20"></i>
                        </a>
                        <a href="javascript:void(0)" class="text-muted mx-2" title="Ayarlar">
                            <i class="mdi mdi-settings font-20"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>


@await Component.InvokeAsync("MailLayoutSidebar")
<div class="card shadow-sm border-0">
    <div class="card-header bg-white d-flex align-items-center">
        <h4 class="mb-0">@ViewBag.ChatPartner ile Yazışmalar</h4>
    </div>
    <div class="card-body p-0">
        <div class="chat-container p-3">
            <div class="mail-item d-flex mb-3 p-3 bg-light rounded shadow-xs">
                <div class="mr-3">
                    <img src="~/assets/images/users/1.jpg" class="rounded-circle" width="40">
                </div>
                <div>
                    <h6 class="font-weight-bold mb-1">Hanna Gover <small class="text-muted ml-2">12:30</small></h6>
                    <p class="mb-0">Proje detaylarını inceleyebildiniz mi? Geri dönüşünüzü bekliyorum.</p>
                </div>
            </div>

            <div class="mail-item d-flex mb-3 p-3 rounded shadow-xs" style="background-color: #fef1fb; border-left: 4px solid #f158d0;">
                <div class="mr-3">
                    <img src="~/assets/images/users/current_user.jpg" class="rounded-circle" width="40">
                </div>
                <div>
                    <h6 class="font-weight-bold mb-1">Siz <small class="text-muted ml-2">13:15</small></h6>
                    <p class="mb-0">Evet Hanna, inceledim. Birkaç küçük revize dışında her şey harika görünüyor.</p>
                </div>
            </div>
        </div>
    </div>
</div>

