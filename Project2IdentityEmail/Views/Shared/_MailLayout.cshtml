<!DOCTYPE html>
<html dir="ltr" lang="en">
<style>
    /* Okunmamış satır stilleri */
    .email-table tr.unread {
        background-color: #f8f9ff !important; /* Çok hafif mavi/gri bir ton */
        font-weight: 700; /* Yazıları kalınlaştırır */
    }

        .email-table tr.unread td {
            color: #3e3c59; /* Daha belirgin yazı rengi */
        }

    /* Okunmuş satır stilleri */
    .email-table tr {
        background-color: #ffffff;
        font-weight: 400;
        transition: 0.2s;
    }

        .email-table tr .btn-group {
            opacity: 0;
            transition: opacity 0.2s;
        }

        .email-table tr:hover .btn-group {
            opacity: 1;
        }

    .email-table td {
        vertical-align: middle !important;
    }

    .dropdown-menu {
        z-index: 9999 !important;
    }
    /* Üç noktanın sadece hover olunca değil, her zaman görünmesini istersen opacity'yi kaldırabilirsin */
    .action-menu {
        opacity: 0.7;
        transition: 0.3s;
    }

    tr:hover .action-menu {
        opacity: 1;
    }

    /* Tablonun menüyü gizlemesini engeller */
    .table-responsive {
        overflow: visible !important;
    }
    /* Menü stilini koru */
    .dropdown-menu.show, .dropdown-menu[style*="display: block"] {
        display: block !important;
        opacity: 1;
        visibility: visible;
    }
</style>


@await Component.InvokeAsync("AdminLayoutHead")


<body>
    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>

    <div id="main-wrapper"
         data-layout="vertical"
         data-navbarbg="skin5"
         data-sidebartype="full"
         data-sidebar-position="fixed"
         data-header-position="fixed"
         data-boxed-layout="full">

        @await Component.InvokeAsync("AdminLayoutHeader")

        @RenderBody()

        @await Component.InvokeAsync("AdminLayoutFooter")
    </div>

    @await Component.InvokeAsync("AdminLayoutScripts")

    <script>
        $(document).ready(function () {
            $('#mailSearchInput').on('input', function () {
                $(this).val().length > 0 ? $('#clearSearch').fadeIn() : $('#clearSearch').fadeOut();
            });
            $('#clearSearch').on('click', function () {
                $('#mailSearchInput').val('').trigger('input').focus();
            });
        });
    </script>
    <script>
        $(function () {
            // Üstteki 3 çizgiye basıldığında sidebarı aç
            $(".nav-toggler").on('click', function () {
                $("#main-wrapper").toggleClass("show-sidebar");
            });

            // Sayfada boş bir yere basıldığında menüyü kapat (opsiyonel)
            $(".page-wrapper").on('click', function () {
                if ($("#main-wrapper").hasClass("show-sidebar")) {
                    $("#main-wrapper").removeClass("show-sidebar");
                }
            });
        });
    </script>
    <script>
        function toggleMyMenu(event, id) {
            // Diğer tüm açık menüleri kapat
            $('.dropdown-menu').hide();

            // Tıklanan menüyü bul ve aç/kapat yap
            var menu = $('#menu-' + id);
            if (menu.is(':visible')) {
                menu.hide();
            } else {
                menu.show();
            }

            // Tıklamanın dışarı taşmasını engelle
            event.stopPropagation();
        }

        // Sayfanın herhangi bir yerine tıklandığında menüyü kapat
        $(document).on('click', function() {
            $('.dropdown-menu').hide();
        });
    </script>
</body>
</html>