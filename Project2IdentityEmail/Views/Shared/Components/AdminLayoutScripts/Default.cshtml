<script>
    $(document).ready(function() {
        // 1. Feather İkonlarını Aktif Et
        if (typeof feather !== 'undefined') {
            feather.replace();
        }

        // 2. CKEditor'ü Başlat (Summernote yerine bunu kullanıyoruz)
        if (typeof CKEDITOR !== 'undefined' && $('#editor1').length > 0) {
            CKEDITOR.replace('editor1', {
                height: 350,
                uiColor: '#ffffff',
                // Güvenlik uyarısını kodla kapatmak istersen:
                versionCheck: false
            });
        }

        // 3. Dropzone Ayarı (ID kontrolü ekleyerek hata almanı önleriz)
        if ($("#dzid").length > 0) {
            $("#dzid").dropzone({
                url: "/file/post", // Backend'deki dosya yükleme metodun
                dictDefaultMessage: "Dosyaları buraya bırakın"
            });
        }

        // 4. Datepicker Ayarı
        if ($('.datepicker').length > 0) {
            $('.datepicker').datepicker({
                autoclose: true,
                todayHighlight: true
            });
        }
    });

        $('#summernote').summernote({
        placeholder: 'Type your email Here',
        tabsize: 2,
        height: 250
    });
