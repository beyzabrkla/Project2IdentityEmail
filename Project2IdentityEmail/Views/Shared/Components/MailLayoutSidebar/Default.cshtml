<div class="container-fluid">
    <div class="email-app">
        <div class="left-part bg-white">
            <a class="ti-menu ti-close btn btn-success show-left-part d-block d-md-none" href="javascript:void(0)"></a>
            <div class="scrollable" style="height:100%;">
                <div class="p-15">
                    <a href="/Mail/ComposeMail" class="btn waves-effect waves-light btn-rounded text-white" style="background-color: #f158d0; width: 100%;">Yeni Mesaj</a>
                </div>
                <div class="divider"></div>
                <ul class="list-group sidebar-nav">
                    <li><small class="p-15 grey-text text-lighten-1 db">KLASÖRLER</small></li>

                    <li class="list-group-item border-0">
                        <a href="/Mail/Inbox?folder=inbox" class="list-group-item-action d-flex align-items-center">
                            <i class="mdi mdi-inbox mr-2 font-18 text-info"></i> Gelen Kutusu
                            @if (ViewBag.InboxCount > 0)
                            {
                                <span class="badge badge-pill badge-info ml-auto">@ViewBag.InboxCount</span>
                            }
                        </a>
                    </li>

                    <li class="list-group-item border-0">
                        <a href="/Mail/Inbox?folder=starred" class="list-group-item-action d-flex align-items-center">
                            <i class="mdi mdi-star mr-2 font-18 text-warning"></i> Yıldızlı
                            @if (ViewBag.StarredCount > 0)
                            {
                                <span class="badge badge-pill badge-warning ml-auto">@ViewBag.StarredCount</span>
                            }
                        </a>
                    </li>

                    <li class="list-group-item border-0">
                        <a href="/Mail/Inbox?folder=drafts" class="list-group-item-action d-flex align-items-center">
                            <i class="mdi mdi-file-document mr-2 font-18 text-danger"></i> Taslaklar
                            @if (ViewBag.DraftCount > 0)
                            {
                                <span class="badge badge-pill badge-danger ml-auto">@ViewBag.DraftCount</span>
                            }
                        </a>
                    </li>

                    <li class="list-group-item border-0">
                        <a href="/Mail/Outbox" class="list-group-item-action d-flex align-items-center">
                            <i class="mdi mdi-send mr-2 font-18 text-success"></i> Gönderilenler
                            @if (ViewBag.OutboxCount > 0)
                            {
                                <span class="badge badge-pill badge-success ml-auto">@ViewBag.OutboxCount</span>
                            }
                        </a>
                    </li>

                    <li class="list-group-item border-0">
                        <a href="/Mail/Inbox?folder=spam" class="list-group-item-action d-flex align-items-center">
                            <i class="mdi mdi-alert-octagon mr-2 font-18 text-dark"></i> Spam
                            @if (ViewBag.SpamCount > 0)
                            {
                                <span class="badge badge-pill badge-dark ml-auto">@ViewBag.SpamCount</span>
                            }
                        </a>
                    </li>

                    <li class="list-group-item border-0">
                        <a href="/Mail/Inbox?folder=trash" class="list-group-item-action d-flex align-items-center">
                            <i class="mdi mdi-delete mr-2 font-18 text-secondary"></i> Çöp Kutusu
                            @if (ViewBag.TrashCount > 0)
                            {
                                <span class="badge badge-pill badge-secondary ml-auto">@ViewBag.TrashCount</span>
                            }
                        </a>
                    </li>

                    <li class="list-group-item border-0"><hr class="my-2"></li>
                    <li><small class="p-15 grey-text text-lighten-1 db">ETİKETLER</small></li>

                    @if (ViewBag.Categories != null)
                    {
                        foreach (var category in ViewBag.Categories)
                        {
                            <li class="list-group-item border-0 p-0">
                                <a href="/Mail/Inbox?label=@category.CategoryName" class="list-group-item-action d-flex align-items-center p-3">
                                    <i class="mdi mdi-label mr-3 font-18" style="color: @category.Color;"></i>
                                    <span style="@(ViewBag.Title == category.CategoryName ? "font-weight: bold; color: #f158d0;" : "")">@category.CategoryName</span>
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>

        <div class="right-part mail-list bg-white">
            <div class="p-15 d-flex align-items-center border-bottom bg-white shadow-sm">
                <div class="d-flex align-items-center mr-3">
                    <div class="custom-control custom-checkbox mr-3">
                        <input type="checkbox" class="custom-control-input" id="check-all-mail">
                        <label class="custom-control-label" for="check-all-mail"></label>
                    </div>

                    @if (ViewBag.CurrentFolder != "trash")
                    {
                        <button type="button" id="delete-selected" class="btn btn-sm btn-outline-danger" style="display: none;">
                            <i class="mdi mdi-delete-sweep"></i> Sil
                        </button>
                    }
                    else
                    {
                        <button type="button" id="restore-selected" class="btn btn-sm btn-outline-success mr-2" style="display: none;">
                            <i class="mdi mdi-undo"></i> Geri Yükle
                        </button>
                        <button type="button" id="hard-delete-selected" class="btn btn-sm btn-danger" style="display: none;">
                            <i class="mdi mdi-alert-octagon"></i> Kalıcı Sil
                        </button>
                    }

                    @if (ViewBag.CurrentFolder == "spam")
                    {
                        <button type="button" id="restore-from-spam" class="btn btn-sm btn-outline-success" style="display: none;">
                            <i class="mdi mdi-email-check"></i> Spam Değil
                        </button>
                    }

                    <div class="btn-group">
                        <button type="button" class="btn waves-effect waves-light btn-rounded btn-outline-primary dropdown-toggle d-flex align-items-center"
                                data-toggle="dropdown" style="padding: 7px 20px; font-weight: 500; border-color: #f158d0; color: #f158d0;">
                            <i class="mdi mdi-filter mr-2"></i> Filtreler
                        </button>
                        <div class="dropdown-menu border-0 shadow">
                            <a class="dropdown-item" href="/Mail/Inbox?filter=unread"><i class="ti-email mr-2"></i> Okunmamışlar</a>
                            <a class="dropdown-item" href="/Mail/Inbox?folder=starred"><i class="ti-star mr-2"></i> Yıldızlılar</a>
                            <a class="dropdown-item" href="/Mail/Inbox?folder=important"><i class="ti-pin-alt mr-2"></i> Önemliler</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/Mail/Inbox?folder=hasattachment"><i class="ti-clip mr-2"></i> Ekli Dosyalar</a>
                        </div>
                    </div>
                </div>

                <div class="flex-grow-1 position-relative">
                    @await Component.InvokeAsync("MailLayoutSearch")
                </div>

                <div class="ml-auto d-flex align-items-center">
                    @if (ViewBag.TotalCount > 0)
                    {
                        <span class="text-muted mr-3 font-12 d-none d-md-block">
                            @ViewBag.RangeInfo
                        </span>
                    }
                </div>
            </div>

            <style>
                @@media (max-width: 991px) {
                    .show-left-part {
                        position: fixed !important;
                        left: 15px !important;
                        top: 80px !important;
                        z-index: 1060 !important;
                        width: 40px !important;
                        height: 40px !important;
                        border-radius: 50% !important;
                        background: linear-gradient(135deg, #f158d0 0%, #a335f3 100%) !important;
                        display: flex !important;
                        align-items: center;
                        justify-content: center;
                        box-shadow: 0 4px 15px rgba(241, 88, 208, 0.4);
                    }

                        .show-left-part:hover {
                            transform: scale(1.1);
                            box-shadow: 0 6px 20px rgba(241, 88, 208, 0.5);
                        }

                        .show-left-part i {
                            color: white !important;
                            font-size: 20px !important;
                        }
                }

                @@media (max-width: 576px) {
                    .show-left-part {
                        left: 10px !important;
                        top: 75px !important;
                        width: 36px !important;
                        height: 36px !important;
                    }
                }

                @@media (max-width: 991px) {
                    .email-app .left-part .show-left-part {
                        position: fixed !important;
                        left: 20px !important;
                        bottom: 30px !important;
                        top: auto !important;
                        width: 55px !important;
                        height: 55px !important;
                        border-radius: 50% !important;
                        background: linear-gradient(135deg, #f158d0 0%, #d136b0 100%) !important;
                        display: flex !important;
                        align-items: center;
                        justify-content: center;
                        z-index: 9999 !important;
                        border: 3px solid #fff !important;
                        box-shadow: 0 4px 15px rgba(0,0,0,0.3) !important;
                        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
                    }

                        .email-app .left-part .show-left-part:active {
                            transform: scale(0.9);
                        }

                        .email-app .left-part .show-left-part::before {
                            content: '\e602';
                            font-family: 'themify';
                            color: white !important;
                            font-size: 22px !important;
                        }

                    .show-sidebar .show-left-part {
                        background: #2ecc71 !important;
                        transform: rotate(90deg);
                    }
                }

                @@media (max-width: 576px) {
                    .email-app .left-part .show-left-part {
                        width: 50px !important;
                        height: 50px !important;
                        left: 15px !important;
                        bottom: 20px !important;
                    }
                }
            </style>

            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const checkAll = document.getElementById('check-all-mail');
                    // Hem ID hem sınıf üzerinden tüm mail checkboxlarını bul
                    const getCheckboxes = () => document.querySelectorAll('.mail-checkbox');

                    const deleteBtn = document.getElementById('delete-selected');
                    const restoreBtn = document.getElementById('restore-selected');
                    const hardDeleteBtn = document.getElementById('hard-delete-selected');
                    const restoreFromSpamBtn = document.getElementById('restore-from-spam');

                    function toggleActionButtons() {
                        const checkedCount = Array.from(getCheckboxes()).filter(cb => cb.checked).length;
                        const show = checkedCount > 0;
                        if (deleteBtn) deleteBtn.style.display = show ? 'inline-block' : 'none';
                        if (restoreBtn) restoreBtn.style.display = show ? 'inline-block' : 'none';
                        if (hardDeleteBtn) hardDeleteBtn.style.display = show ? 'inline-block' : 'none';
                        if (restoreFromSpamBtn) restoreFromSpamBtn.style.display = show ? 'inline-block' : 'none';
                    }

                    if (checkAll) {
                        checkAll.addEventListener('change', function () {
                            getCheckboxes().forEach(cb => cb.checked = this.checked);
                            toggleActionButtons();
                        });
                    }

                    // Checkboxlara tıklanınca butonları göster/gizle
                    document.addEventListener('change', function(e) {
                        if (e.target.classList.contains('mail-checkbox')) {
                            toggleActionButtons();
                        }
                    });

                    function performAction(url, confirmMsg) {
                        const selectedElements = Array.from(getCheckboxes()).filter(cb => cb.checked);
                        const selectedIds = selectedElements.map(cb => cb.value);

                        if (selectedIds.length === 0) return;

                        if (confirm(selectedIds.length + " mesaj seçildi. " + confirmMsg)) {
                            const formData = new URLSearchParams();
                            // BURASI KRİTİK: Controller'daki 'selectedIds' ismiyle birebir aynı olmalı
                            selectedIds.forEach(id => formData.append('selectedIds', id));

                            fetch(url, {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                                body: formData
                            })
                            .then(res => res.json())
                            .then(data => {
                                if (data.success) {
                                    location.reload();
                                } else {
                                    alert("İşlem gerçekleştirilemedi.");
                                }
                            })
                            .catch(err => {
                                console.error("Hata:", err);
                                alert("Sunucu ile iletişim kurulamadı.");
                            });
                        }
                    }

                    // Buton Tıklamaları - Controller'daki isimlerle eşleştirdik
                    if (deleteBtn) {
                        deleteBtn.addEventListener('click', () => performAction('/Mail/DeleteSelectedMessages', "Çöp kutusuna taşımak istediğinize emin misiniz?"));
                    }
                    if (restoreBtn) {
                        restoreBtn.addEventListener('click', () => performAction('/Mail/RestoreMessages', "Seçilenler nereden geldilerse oraya geri taşınacak?"));
                    }
                    if (hardDeleteBtn) {
                        hardDeleteBtn.addEventListener('click', () => performAction('/Mail/HardDeleteMessages', "DİKKAT! Bu işlem geri alınamaz. Kalıcı olarak silinsin mi?"));
                    }
                    if (restoreFromSpamBtn) {
                        restoreFromSpamBtn.addEventListener('click', () => performAction('/Mail/RestoreFromSpamMultiple', "Seçili mesajlar spam değil olarak işaretlenecek?"));
                    }
                });
            </script>
