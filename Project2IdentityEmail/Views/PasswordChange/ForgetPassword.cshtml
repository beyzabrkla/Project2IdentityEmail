@model Project2IdentityEmail.Models.ForgetPasswordViewModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background:linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url(/mendy-admin-template/mendy-admin/package/assets/images/big/auth-bg.jpg) no-repeat center center; background-size: cover;">

    <div class="auth-box shadow-lg soft-card bg-white col-md-8 col-lg-4 p-5 my-5" style="border-radius: 25px;">

        <div id="loginform">
            <div class="logo text-center pb-4">
                <span class="db"><img src="/mendy-admin-template/mendy-admin/package/assets/images/logo-icon.png" alt="logo" style="width: 60px;" /></span>
                <h2 class="font-weight-bold mb-1 mt-3 text-dark">Şifre Kurtarma</h2>
                <p class="text-muted small">Bağlantı için e-postanızı girin.</p>
            </div>

            <form class="form-horizontal" method="post" asp-action="ForgetPassword" asp-controller="PasswordChange">

                <div class="form-group mb-4">
                    <label class="font-12 font-weight-bold text-muted ml-2 text-uppercase">E-posta Adresi</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-transparent border-right-0" style="border-radius: 12px 0 0 12px;"><i class="ti-email"></i></span>
                        </div>
                        <input class="form-control form-control-lg soft-input border-left-0 shadow-none" type="email" asp-for="Email" required placeholder="ornek@mail.com">
                    </div>
                </div>

                <div class="form-group text-center">
                    <button class="btn btn-block btn-lg btn-custom-gradient py-3 text-uppercase font-weight-bold shadow-sm" type="submit" style="border-radius: 12px;">
                        Bağlantı Gönder
                    </button>
                </div>

                <div class="mt-4 text-center">
                    <p class="text-muted small"><a href="/Account/Login" class="text-primary font-weight-bold ml-1">Giriş Sayfasına Dön</a></p>
                </div>
            </form>

            @* Mesaj kutuları içeride kalmalı *@
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info border-0 shadow-sm mt-4 small" style="border-radius: 10px;">
                    <i class="ti-info-alt mr-2"></i> @ViewBag.Message
                </div>
            }
        </div>
    </div>
</div>

